{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "scripture-show",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "all": true
      },
      "path":{
        "all": true
      },
      "fs":{
          "all":true,
          "scope":["$APP/*", "$DESKTOP/*", "*/*", "*", "*/.config/*", "$CONFIG/*", "$RESOURCE/*"]
      },
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["appimage"],
      "identifier": "scripture-show",
      "resources":[
        "../resources/*"
        ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    }
  }
}
